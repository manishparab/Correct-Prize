<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ksm.cp.Activity.MakeOffer">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/MakeOfferImageview"
        android:scaleType="centerCrop"
        />

    <EditText
        android:id="@+id/MakeOffer_EditText_MakeOffer"
        android:layout_width="250sp"
        android:layout_height="75sp"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/whiteback"
        android:layout_marginTop="50sp"
        android:gravity="right"
        android:inputType="number"
        android:paddingRight="5sp"
        android:textCursorDrawable="@drawable/cursorcolor"
        />

    <TextView
        android:id="@+id/MakeOffer_TextView_ItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MakeOffer_EditText_MakeOffer"
        android:layout_marginTop="10sp"
        android:textSize="@dimen/text_size"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        />

    <Button android:id="@+id/Button_activity_MakeOffer" style="?android:textAppearanceMedium"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="30dp" android:text="Make Offer"
        android:textStyle="bold"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:textColor="#ffffffff"
        android:fontFamily="sans-serif"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ff7e51c2" />
</RelativeLayout>
